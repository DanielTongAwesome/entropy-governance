{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "noImplicitAny": false,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "types": [
            "@nomiclabs/hardhat-ethers",
            "@nomiclabs/hardhat-waffle"
        ]
    },
    "include": [
        "./scripts/**/*",
        "./test/**/*"
    ],
    "exclude": [
        "./types",
        "./artifacts",
        "./cache",
        "node_modules"
    ],
    "files": [
        "./hardhat.config.ts",
    ]
}